<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Productos Celular</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #222222;
      color: #ffffff;
      margin: 0;
      padding: 0;
    }

    h1 {
      text-align: center;
      margin: 20px 0;
      font-size: 24px;
      color: #ff9900;
    }

    ul {
      list-style: none;
      padding: 0;
      margin: 0;
      display: flex;
      flex-wrap: wrap;
      justify-content: space-between;
      padding: 20px;
    }

    li {
      width: calc(33.33% - 20px); 
      background-color: #333333;
      box-shadow: 0 2px 6px rgba(0, 0, 0, 0.3);
      border-radius: 10px;
      padding: 20px;
      margin-bottom: 20px;
    }

    img {
      width: 100%;
      max-height: 150px;
      object-fit: cover;
      border-radius: 5px;
      margin-bottom: 10px;
    }

    h2 {
      font-size: 18px;
      margin: 0;
      color: #ffffff; 
    }

    p {
      margin: 5px 0;
      font-size: 14px;
      color: #cccccc;
    }

    .price {
      font-weight: bold;
      color: #ff9900; 
    }

 
    .user-info {
      position: fixed;
      top: 0;
      right: 0;
      padding: 20px;
      background-color: #333333;
      color: #ffffff;
      border-radius: 0 10px 10px 0;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
    }

    .user-info p {
      margin: 5px 0;
      font-size: 14px;
    }

    .user-info a {
      display: block;
      margin-top: 10px;
      color: #ff9900;
      text-decoration: none;
      font-size: 14px;
    }

    .user-info a:hover {
      text-decoration: underline;
    }

    .sort-button {
      margin-right: 10px;
      color: #ffffff;
      text-decoration: none;
      font-size: 14px;
    }

    .sort-button:hover {
      text-decoration: underline;
    }

    form {
      margin-top: 20px;
    }

    label {
      font-size: 14px;
      margin-right: 5px;
      color: #cccccc;
    }

    input[type="number"] {
      width: 40px;
      font-size: 14px;
      padding: 2px;
    }

    button[type="submit"] {
      padding: 5px 10px;
      background-color: #ff9900;
      border: none;
      color: #ffffff;
      font-size: 14px;
      cursor: pointer;
    }

  
    .page-container {
      padding: 20px;
    }
    
  .navbar {
    background-color: #333333;
    color: white;
    padding: 10px 0;
 
  }

  .navbar-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .navbar-links {
    display: flex;
    gap: 20px;
    text-decoration: none;

  }

  
  .cart-link{
     color: white;
    text-decoration: none;
    font-size: 14px;

  }
  .chat-link {
    color: white;
    text-decoration: none;
    font-size: 14px;
  }


  
  

  </style>
</head>
<body>
  <nav class="navbar">
    <div class="navbar-content">
      <div class="navbar-links">
        <a href="/chat" class="chat-link">Chat</a>
        {{#if user}}
        <a href="/carts" class="cart-link">Carrito</a>
        {{/if}}
      </div>
    </div>
  </nav>
  <div class="user-info">
    {{#if user}}
    <p>Bienvenido, {{user.email}}!</p>
    <p>Rol: {{user.role}}</p>
    <a href="/api/session/logout">Cerrar sesión</a>
    {{/if}}
  </div>
  <div class="page-container">
    <h1>Celulares</h1>
    <div>
      <a href="/list?sort=asc" class="sort-button">Ordenar ascendente</a>
      <a href="/list?sort=desc" class="sort-button">Ordenar descendente</a>
    </div>
    
    <ul>
      {{#each docs}}
      <li>
        <img src="{{thumbnail}}" alt="Imagen del producto">
        <h2>{{title}}</h2>
        <p>{{description}}</p>
        <p class="price">Precio: ${{price}}</p>
        <p>Código: {{code}}</p>
        <p>Stock: {{stock}}</p>
        <a href="/productos/{{this._id}}">Ver detalles</a>
      


    <form class="addToCartForm">
    <input type="hidden" name="productId" value="{{_id}}">
    <button type="submit">Agregar al Carrito</button>
    </form>

      </li>
      {{/each}}
    </ul>
    <form id="form" action="/list" method="get">
      <label for="page">Página:</label>
      <input type="number" id="page" name="page" min="1" value="{{page}}">
      <label for="limit">Límite:</label>
      <input type="number" id="limit" name="limit" min="1" value="{{limit}}">
      <button type="submit">Actualizar</button>
    </form>
  </div>
  <script>
    document.getElementById('form').onsubmit = (e) => {
      e.preventDefault();
      const limit = document.getElementById('limit').value;
      const page = document.getElementById('page').value;
      const url = `/list?limit=${limit}&page=${page}`;
      window.location.href = url;
    };
  
document.querySelectorAll('.addToCartForm').forEach(form => {
  form.addEventListener('submit', async function(event) {
    event.preventDefault();

    const formData = new FormData(form);
    const cartId = "64d18007537d2a26e7b6bb3f"; // Harcodeado, es uno de los carritos que tengo en mongo

    try {
      const response = await fetch(`/api/carts/64d18007537d2a26e7b6bb3f/products/${formData.get('productId')}`, {
        method: 'POST',
        body: JSON.stringify({ "quantity": 1 }),
        headers: {'Content-Type': 'application/json' }
      });

      if (response.ok) {
        window.location.href = '/carts/64d18007537d2a26e7b6bb3f';
      } else {
        console.error('Error al agregar al carrito');
      }
    } catch (error) {
      console.error('Error al comunicarse con el servidor:', error);
    }
  });
});




  </script>
</body>


</html>


